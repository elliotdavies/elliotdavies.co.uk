---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal website of Elliot Davies" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <main class="main">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Thanks to https://systemfontstack.com/ */
  :root {
    --font-sans: -apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui,
      helvetica neue, helvetica, Ubuntu, roboto, noto, arial, sans-serif;
    --font-serif: Iowan Old Style, Apple Garamond, Baskerville, Times New Roman,
      Droid Serif, Times, Source Serif Pro, serif, Apple Color Emoji,
      Segoe UI Emoji, Segoe UI Symbol;
    --font-mono: Menlo, Consolas, Monaco, Liberation Mono, Lucida Console,
      monospace;
    
    --color-off-black: #151515;
    --color-grey: #707070;
    --color-link: #5291F5;
    
    --breakpoint-tablet: 768px;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    font-size: 100%;
    font-family: var(--font-serif);
    color: var(--color-off-black);
    line-height: 1.75;
  }


  p {
    margin-block-start: 0;
    margin-block-end: 1.5rem;
  }

  a,
  a:visited {
    text-decoration: underline;
    color: var(--color-link);
  }

  a:hover {
    text-decoration: none;
  }

  pre {
    font-family: var(--font-mono);
    margin-block: 1rem;
    padding: 1rem;
    background-color: #f5f5f5;
    border-radius: 4px;
    overflow-x: auto;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.8rem;
  }

  ul,
  ol {
    margin-block-end: 1.5rem;
  }

  ul li,
  ol li {
    margin-block-end: 0.8rem;
  }

  .main {
    max-width: 35rem;
    margin-block: 0;
    margin-inline: auto;
    padding: 1rem;
  }

  @media screen and (min-width: 768px) {
    .main {
      padding: 2rem;
    }
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Typography scales thanks to https://type-scale.com */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-sans);
    line-height: 1.1;
  }

  h1 {
    margin-block-start: 0;
    margin-block-end: 0.8rem;
    /* "Major second" scale */
    font-size: 1.802rem;
  }

  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-block-start: 2rem;
    margin-block-end: 0.8rem;
  }

  h2 {
    font-size: 1.602rem;
  }

  h3 {
    font-size: 1.424rem;
  }

  h4 {
    font-size: 1.266rem;
  }

  h5 {
    font-size: 1.125rem;
  }

  h6 {
    font-size: 1rem;
  }

  @media screen and (min-width: 768px) {
    h1 {
      /* "Major third" scale */
      font-size: 3.052rem;
    }

    h2 {
      font-size: 2.441rem;
    }

    h3 {
      font-size: 1.953rem;
    }

    h4 {
      font-size: 1.563rem;
    }

    h5 {
      font-size: 1.25rem;
    }
  }
</style>
